<style>
    #registration_panel {
        margin: 0 auto;
        width: 70%;
    }

    table {
        width: 75%;
    }

    .field_label {
        text-align: right;
        padding-right: 30px;
        margin-top: -5px;
        font-size: 1.2em;
    }

    #button_container {
        text-align: center;
        padding-top: 3%;
    }

    #reset_btn {
        float: left;
        width: 48%;
        padding: 7px;
        margin-top: 10px;
        margin-left: 10px;
    }

    #sign_up_btn {
        width: 48%;
        padding: 6px;
        float: left;
    }

</style>
<script type="text/javascript">
    $(function () {
        if ($('.instruction_note').text() === 'x ') {
            $('.instruction_note').css('padding', 0)
            $('.close').hide();
        } else
            $('.close').show();

        $('.close').on('click', function () {
            $('.instruction_note').hide();
        });
    });

</script>
<div id='top_bar'>
  <a href="/" id='logo'>

  </a>

  <%= link_to 'Login', '/', id: "logout_btn", class: "red_button" %>
  <a id="contact_us_btn" class="light_button" href='/contact_us'>Contact Us</a>
  <a id="pricing_btn" class="light_button" href='/pricing'>Pricing</a>
</div>

<div id="container">
  <div id="registration_panel">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <div id="table_container">
          <table>
            <h4 class="lighter bigger header" style="width: 90%;">Enter your Registration Details</h4>
            <%= devise_error_messages! %>
            <tr>
              <td class="field_label">Name</td>
              <td><%= f.text_field :name, :autofocus => true, placeholder: 'e.g. Nikunj Thakkar' %></td>
            </tr>
            <tr>
              <td class="field_label">Mobile Number</td>
              <td><%= f.text_field :mobile_no, :autofocus => true, placeholder: 'e.g. 9833664934' %></td>
            </tr>
            <tr>
              <td class="field_label">Email</td>
              <td><%= f.email_field :email, :autofocus => true, placeholder: 'e.g. nikunj@letmepractice.com' %></td>
            </tr>
            <tr>
              <td class="field_label">Password</td>
              <td><%= f.password_field :password, placeholder: 'Enter Your Password Here' %></td>
            </tr>
            <tr>
              <td class="field_label">Confirm Password</td>
              <td><%= f.password_field :password_confirmation, placeholder: 'Re-enter Your Password Here' %></td>
            </tr>
            <tr>
              <td></td>
              <td>
                <div id="button_container">
                  <button type="submit" id="sign_up_btn" class='red_button'>Register</button>
                  <button type="reset" id="reset_btn" class='light_button'>Reset</button>
                </div>
              </td>
            </tr>
          </table>
        </div>
        <%= f.hidden_field :is_guest, value: false %>
        <%= f.hidden_field :max_tests, value: 1 %>
    <% end %>
  </div>
  <div id='footer_panel' style="position: fixed; top: 600px;">
    <div id='copyright'>All Rights Reserved. 2013 <span class="copy_sym">&copy;</span>
      <a href='#'><span class="Y YB_logo">Yuva</span><span class="B YB_logo">Beat</span></a>
    </div>
  </div>
</div>